{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "D:/Program Files/MinGW/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-I./include",
                "-L./lib",
                "src/\\*.cpp",
                "src/glad.c",
                "-lglfw3dll",
                "-o",
                "${workspaceFolder}/Launch.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}